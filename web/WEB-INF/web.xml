<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>get controller</servlet-name>
        <servlet-class>controllers.GetController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>get controller</servlet-name>
        <url-pattern>/get_data/*</url-pattern>
        <!--url-pattern>/post_data/*</url-pattern-->
        <!--url-pattern>/people</url-pattern-->
    </servlet-mapping>

    <servlet>
        <servlet-name>delete controller</servlet-name>
        <servlet-class>controllers.DeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete controller</servlet-name>
        <url-pattern>/delete_data/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update controller</servlet-name>
        <servlet-class>controllers.UpdateController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update controller</servlet-name>
        <url-pattern>/update_data/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add controller</servlet-name>
        <servlet-class>controllers.AddController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add controller</servlet-name>
        <url-pattern>/post_data/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete form</servlet-name>
        <jsp-file>/delete_form.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete form</servlet-name>
        <url-pattern>/delete_form/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add person</servlet-name>
        <jsp-file>/add_person.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add person</servlet-name>
        <url-pattern>/add_person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add parent</servlet-name>
        <jsp-file>/add_parent.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add parent</servlet-name>
        <url-pattern>/add_parent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add contacts</servlet-name>
        <jsp-file>/add_contacts.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add contacts</servlet-name>
        <url-pattern>/add_contacts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add kid</servlet-name>
        <jsp-file>/add_kid.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add kid</servlet-name>
        <url-pattern>/add_kid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add account</servlet-name>
        <jsp-file>/add_account.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add account</servlet-name>
        <url-pattern>/add_account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add group</servlet-name>
        <jsp-file>/add_group.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>add group</servlet-name>
        <url-pattern>/add_group</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>update person</servlet-name>
        <jsp-file>/update_person.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>update person</servlet-name>
        <url-pattern>/update_person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update kid</servlet-name>
        <jsp-file>/update_kid.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>update kid</servlet-name>
        <url-pattern>/update_kid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update parent</servlet-name>
        <jsp-file>/update_parent.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>update parent</servlet-name>
        <url-pattern>/update_parent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update contacts</servlet-name>
        <jsp-file>/update_contacts.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>update contacts</servlet-name>
        <url-pattern>/update_contacts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update account</servlet-name>
        <jsp-file>/update_account.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>update account</servlet-name>
        <url-pattern>/update_account</url-pattern>
    </servlet-mapping>

    <ejb-local-ref>
        <ejb-ref-name>peopleBean</ejb-ref-name>
        <local>beans.IPeopleBean</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>parentBean</ejb-ref-name>
        <local>beans.IParentBean</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>contactsBean</ejb-ref-name>
        <local>beans.IContactsBean</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>kidBean</ejb-ref-name>
        <local>beans.IKidBean</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>accountBean</ejb-ref-name>
        <local>beans.IAccountBean</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>groupBean</ejb-ref-name>
        <local>beans.IGroupBean</local>
    </ejb-local-ref>

</web-app>